# API Keys
GEMINI_API_KEY=your_gemini_api_key_here  # Required: for LLM and embeddings
GOOGLE_API_KEY=your_google_api_key_here  # Same as GEMINI_API_KEY

# Model Configuration
GEMINI_MODEL_NAME=gemini-2.0-flash  # LLM model
EMBEDDING_MODEL=models/text-embedding-004  # Gemini embedding model

# Qdrant Configuration
QDRANT_URL=your_qdrant_url_here
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_COLLECTION_NAME=book_chunks

# Application Settings
DEBUG=true
LOG_LEVEL=INFO
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RESULTS=5
DOCS_DIRECTORY=docs
HOST=0.0.0.0
PORT=8000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# MCP Server Configuration (Context7) - Optional
MCP_SERVER_URL=your_mcp_server_url_here
MCP_SERVER_TOKEN=your_mcp_server_token_here

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8000,*
